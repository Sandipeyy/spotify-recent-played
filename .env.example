# Spotify API Credentials
SPOTIFY_CLIENT_ID=YOUR_SPOTIFY_CLIENT_ID
SPOTIFY_CLIENT_SECRET=YOUR_SPOTIFY_CLIENT_SECRET
SPOTIFY_REDIRECT_URI=https://YOUR_DOMAIN/callback

# Your front-end origin (use * for development)
FRONTEND_ORIGIN=*

# Your API key for showing full refresh token
API_KEY=your_api_key_here

# Playlist ID to update top tracks
SPOTIFY_PLAYLIST_ID=YOUR_SPOTIFY_PLAYLIST_ID

# Optional: default refresh token (after first login you can save it here)
SPOTIFY_REFRESH_TOKEN=
